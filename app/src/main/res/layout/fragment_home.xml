<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="smartlock.iot.android.iot_smart.activity.HomeFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <com.rey.material.widget.Button
            style="Material.Drawable.Ripple.Touch.Light"
            android:id="@+id/lockbutton"
            android:layout_width="150dp"
            android:layout_height="74dp"
            app:rd_rippleAnimDuration="450"
            android:background="@drawable/mybuttonbg2"
            android:textColor="#FFFFFF"
            android:layout_marginRight="50dp"
            android:text="LOCK"
            android:textSize="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="lockbuttonOnClick"
            app:rd_enable="true"/>


        <com.rey.material.widget.Button

            style="Material.Drawable.Ripple.Touch.Light"
            android:id="@+id/unlockbutton"
            android:layout_width="150dp"
            android:layout_height="74dp"
            android:background="@drawable/mybuttonbg2"
            app:rd_rippleAnimDuration="450"
            android:textColor="#FFFFFF"

            android:text="UNLOCK"
            android:textSize="15dp"
            android:layout_weight="2"
            android:clickable="true"
            android:onClick="unlockbuttonOnClick"
            app:rd_enable="true"



            />

    </LinearLayout>
</RelativeLayout>